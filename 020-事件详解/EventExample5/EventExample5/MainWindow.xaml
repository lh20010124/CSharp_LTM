<Window x:Class="EventExample5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventExample5"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Center"
                 Height="50"
                 Margin="0,10,0,0"
                 TextWrapping="Wrap"
                 Text="TextBox"
                 VerticalAlignment="Top"
                 Width="780"
                 x:Name="textBox1" />
        <Button Content="Click Me"
                HorizontalAlignment="Center"
                Margin="0,100,0,0"
                VerticalAlignment="Top"
                Height="45"
                RenderTransformOrigin="0.5,0.5"
                Width="120"
                Click="Button_Click"
                x:Name="button1">
        </Button>
        <Button Content="Click Me"
                HorizontalAlignment="Center"
                Margin="0,160,0,0"
                VerticalAlignment="Top"
                Height="45"
                RenderTransformOrigin="0.5,0.5"
                Width="120"
                x:Name="button2">
        </Button>
        <Button Content="Click Me"
                HorizontalAlignment="Center"
                Margin="0,220,0,0"
                VerticalAlignment="Top"
                Height="45"
                RenderTransformOrigin="0.5,0.5"
                Width="120"
                x:Name="button3">
        </Button>

    </Grid>
</Window>
